<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/40989200a5.js" crossorigin="anonymous"></script>


    <!-- css stylesheet -->
    <link rel="stylesheet" href="/css/stocks/colors.css" />
    <link rel="stylesheet" href="/css/login.css">

    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

    <title>Login</title>
</head>

<body>
    <div class="container">
        <div class="pic"><img src="/images/signup_login.png" alt=""></div>
        <div class="main">
            <h1>Sign In</h1>

            <div class="signInButtons">
                <a href="/auth/google"><img class="png1" src="https://img.icons8.com/color/48/000000/google-logo.png"
                        width="18px"><button class="google">
                        Sign in with Google</button></a>
                <a href="/auth/facebook"><img class="png2"
                        src="https://img.icons8.com/fluency/48/000000/facebook-new.png" width="18px"><button
                        class="fb"></i> Sign in
                        with
                        Facebook</button></a>
            </div>

            <p class="or">-OR-</p>

            <form action="/login" method="post">
                <div class="input-fields">
                    <input type="text" name="username" placeholder="Username or Email" id="username">
                    <div id="usernameError"></div>
                    <!-- <p class="error">
                        <% if (messages.error) { %>
                            <%= messages.error %>
                                <% } %>
                    </p> -->
                </div>
                <div class="input-fields">
                    <input type="password" name="password" placeholder="Password" id="password">
                    <div id="passwordError"></div>
                </div>
                <span class="forgotPassword"><a href=""> Forgot Password?</a></span>
                <button type="submit" id="submit" name="submit">Sign In</button>
            </form>






            <p class="later">Don't have an account? <a href="/signup">Sign Up</a></p>
        </div>
    </div>

    <script src="js/login.js"></script>
</body>

</html>